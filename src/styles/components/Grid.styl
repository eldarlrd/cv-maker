.two-column
  grid-template-columns repeat(2, minmax(4rem, 1fr))

.three-column
  grid-template-columns repeat(3, minmax(4rem, 1fr))

.dragging
  z-index 1

  #drag-btn
    cursor grabbing !important

.dnd-list
  gap 0.375rem !important

  .list-item
    padding 0.25rem 0
    background main-fg
    display flex !important
    border-radius border-curve
    justify-content space-between

    span
      display inherit
      align-items center
      word-break break-all
      gap 0.75rem !important
      flex-direction row !important

      h1
        font-size 1.375rem
        font-weight 400 !important

    #trash-btn
      cursor pointer
      -webkit-tap-highlight-color tap-fg

    #drag-btn
      cursor grab
      touch-action none
      -webkit-tap-highlight-color tap-fg

    button
      color field-bg
      height 2.25rem
      min-width 2.5rem
      background transparent
      border-radius border-curve
      transition transition-config
      border edge-style transparent
      transition-property outline, background

      &:focus-visible
        outline edge-style highlight

      @media (hover hover)
        &:hover
          background highlight
